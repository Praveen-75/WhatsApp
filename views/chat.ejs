<!DOCTYPE html>
<html lang="en">
<head>
     <meta charset="UTF-8">
     <meta http-equiv="X-UA-Compatible" content="IE=edge">
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <title>Document</title>
     <link rel="stylesheet" href="/stylesheets/style.css">
     <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
</head>
<body>
     <div id="main">
          <div class="card">
               <div class="photo1">
                    <h1><i class="ri-arrow-left-line"></i><h3>Profile</h3></a></h1>
                    <div class="photo"><img src="/images/uploads/<%= user.profilePic %>" alt=""></div>
                    <form id="photoform" action="/photo" method="post" enctype="multipart/form-data">
                         <input id="fileinp" type="file" name="image">
                         <input type="submit">
                    </form>
                    <div class="txt">
                         <h1><span>Name: </span> <%= user.name %></h1><hr>
                         <h1><span>Mobile Number: </span> <%= user.mobile %></h1><hr>
                         <h1><span>About: </span><p>Lorem ipsum, dolor sit amet consectetur adipisicing elit. A cum suscipit aliquam in dolore esse iusto, neque error alias perferendis?</p></h1><hr>
                    </div>
               </div>
               <div class="nav">
                    <div class="photos"><img src="/images/uploads/<%= user.profilePic %>" alt=""></div>
                    <div class="iccon">
                         <a href="/Story"><i class="ri-refresh-line"></i></a>
                         <i class="ri-add-line"></i>
                         <i class="ri-more-line"></i>
                    </div>
               </div>

               <div class="search">
                    <i class="ri-search-line"></i>
                    <form action="">
                         <input id="myInput" type="text" placeholder="Search..." onkeyup="search()">
                    </form>
               </div>
     
               <div class="chat">
                    <% data.forEach(function(data){ %>
                         <a href="/chat/<%= data.username %>">
                              <div class="mainchat">
                                   <div class="profile"><img src="/images/uploads/<%= data.profilePic %>" alt=""></div>
                                   <div class="msg"><h3><%= data.name %></h3></div>
                              </div>
                         </a>
                         
                    <% }) %>     
               </div>
          </div>

          <div class="mid">
               <div class="mphoto">
                    <h1><%= data1.name %></h1>
                    <img src="/images/uploads/<%= data1.profilePic %>" alt="">
               </div>
          </div>

          <div class="right">
               <div class="rnav">
                    <div class="rphoto">
                         <img id="m" src="/images/uploads/<%= data1.profilePic %>" alt="">
                         <h3><%= data1.name %></h3>
                    </div>
                    <div id="msgspace"><h6></h6></div>
                    <div class="riccon">
                         <i id="video" class="ri-vidicon-line"></i>
                         <i class="ri-phone-line"></i>
                         <i class="ri-search-line"></i>
                         <i class="ri-more-fill"></i>
                    </div>
               </div>


               <div class="rprofile">
                    <h3><i id="rarow"class="ri-arrow-right-line"></i><h3>Profile</h3></a></h3>
                    <img id="m" src="/images/uploads/<%= data1.profilePic %>" alt="">
                    <div class="rtxt">
                         <h3><i>Name: <%= data1.name %></i></h3><hr>
                         <h3><i>Mobile No: <%= data1.mobile %></i></h3><hr>
                         <h3><i><span>About: </span><p>Lorem ipsum, dolor sit amet consectetur adipisicing elit. A cum suscipit aliquam in dolore esse iusto, neque error alias perferendis?</p></i></h3><hr>
                    </div>
               </div>

               <div class="rchat">
                    <div id="msgbox"></div>
                    <div class="rbuttom">
                         <i class="ri-emotion-line"></i>
                         <i id="file" class="ri-attachment-2"></i>
                         <form id="sendform" action="">
                              <input id="filesend" type="file" >
                              <input type="submit">
                         </form>
                         <form action="">
                              <textarea placeholder="Typeing"></textarea>
                              <i id="send" class="ri-send-plane-2-line"></i>
                         </form>
                         <i class="ri-mic-line"></i>
                    </div>
               </div>
          </div>

     </div>

     
     
     <script src="https://cdn.socket.io/4.5.0/socket.io.min.js" integrity="sha384-7EyYLQZgWBi67fBtVxw60/OWl1kjsfrPFcaU0pp0nAh+i8FD068QogUvg85Ewy1k" crossorigin="anonymous"></script>
     <script src="/javascripts/profile.js"></script>
</body>
</html>